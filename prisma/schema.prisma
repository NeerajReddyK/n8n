generator client {
  provider = "prisma-client-js"
  output   = "../dist/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String    @id @default(uuid())
  email String    @unique
  password  String

  workflows  Workflow[] 
}

model Workflow {
  workflowId    String    @id   @default(uuid())
  title         String
  active        Boolean
  nodes         Json
  connections   Json

  email        String
  user          User      @relation(fields: [email], references: [email])

  webhook       Webhook?
}

enum MethodType {
  POST
  GET
  PUT
  DELETE
}

model Webhook {
  webhookId     String     @id    @default(uuid())
  title         String
  method        MethodType
  path          String
  header        Json
  secret        String

  workflowId    String      @unique 
  workflow      Workflow    @relation(fields: [workflowId], references: [workflowId])
}

model Credentials {
  credentialId    String    @id   @default(uuid())
  title           String
  platform        String
  data            Json
}

